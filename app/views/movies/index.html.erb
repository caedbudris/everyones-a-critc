<%= provide(:title, "All Movie") %>
<div class="moviesAll">
<h1>All the Movies</h1>
    <%= form_tag movies_path, :method => 'get' do %>
        <div class="search">
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil %>
        </div>
    <% end %>
    <% if @movies.count == 0 %>
        <h3>We don't have that movie. Would you like to add it? <%= link_to "Add this movie", new_movie_path %></h3>
    <% else %>
    <ul>
        <% @movies.each do |movie| %>
            <li class="movie">    
                <%= render movie %>
            </li>
        <% end %>
    </ul>
    <% end %>
</div>